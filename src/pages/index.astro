---
import { getCollection, render } from "astro:content";

const allThoughts = await getCollection("thoughts");
const sortedThoughts = allThoughts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const thoughtsWithContent = await Promise.all(
	sortedThoughts.map(async (entry) => {
		const { Content } = await render(entry);
		return { entry, Content, dateStr: entry.data.date.toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" }) };
	})
);
---

